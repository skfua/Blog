<script type="text/javascript">
$(function () {
  $('#edit').froalaEditor({
  height: 400,
  heightMax: 600,
  tableCellStyles: {
        'fr-highlighted': 'Highlighted',
        'fr-thick': 'Thick',
        noborders: 'Noborders',
        cellpaddingmd: 'CellpaddingMedium',
        cellpaddinglg: 'CellpaddingLarge',
        smallcell: 'Smallcell',
        ultrasmallcell: 'UltraSmallcell',
      },
  });
});
</script>

<div class="col-lg-offset-3 col-lg-6">
<h1 style="margin-left:15px">Edit Article</h1>



<%= form_for :article, url: article_path(@article), method: :put, class: 'form-horizontal' do |f| %>
<div class="form-group">
    <%= f.label :title, class: 'col-sm-1 control-label' %>
    <div class="col-sm-11">
      <%= f.text_field :title, class: 'form-control' %>
      <br>
    </div>
</div>

<div class="form-group">
    <%= f.label :fabula, class: 'col-sm-1 control-label' %>
    <div class="col-sm-11">
      <%= f.text_field :fabula, class: 'form-control' %>
      <br>
    </div>
</div>

<div class="form-group">
    <%= f.label :text, class: 'col-sm-1 control-label' %>
    <div class="col-sm-11">
      <%= f.text_area :text, rows: '40', class: 'form-control', id: 'edit' %>
      <br>
    </div>
</div>


<div class="col-sm-offset-1 col-sm-11">
  <%= f.submit "SAVE", class: 'btn btn-primary' %>
</div>
<% end %>
</div>

<script>
      $(function() {
          $('#edit').froalaEditor()
      });
  </script>

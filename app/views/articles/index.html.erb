<div class="col-lg-12">


<% @articles.each do |article| %>
  <div class="col-lg-3" style="margin-top:15px;">

    <div class="" style="display: inline-block; width: 100%; background-color: black; padding: 15px">

      <p style="font-size: 16px; font-weight: bold; color: white"><%= link_to truncate(article.title, length: 90), article_path(article), :style =>'color: white'%></p>
      <div style="color:white; height: 45px; overflow: hidden"><%= article.fabula %></div>

      <% if user_signed_in? %>
      <div class="" style="margin-top: 5px">
        <%= link_to 'Edit', edit_article_path(article) %>
        <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: 'A u sure?'}, :style =>'display: inline-block; margin-left: 5px' %>
      </div>
      <% end %>

    </div>
  </div>
<% end %>

</div>

<!DOCTYPE html>

<html>
    <head>
        <title>Blog</title>
        <%= csrf_meta_tags %>

        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
        <!-- Latest compiled and minified CSS -->
        <!-- Latest compiled and minified JavaScript -->
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
        

    </head>

    <body>
      <nav class="navbar navbar-inverse">
        <div class="container-fluid">
          <div class="navbar-header">
            <%= link_to 'SKFBLOG', root_path, class: 'navbar-brand' %></li>
          </div>
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
              <li id="create"><%= link_to 'Create', new_article_path %></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">

              <% if user_signed_in? %>

                <li><p class="navbar-text">Hello! <%= current_user.username %></p></li>
                <li><%= button_to 'Sign Out', destroy_user_session_path, method: 'delete', class: "btn btn-default navbar-btn" %></li>

              <% else %>
                  <li><%= button_to 'Sign In', new_user_session_path, class: "btn btn-default navbar-btn", style: 'margin-right: 10px', method: 'get' %></li>
                  <li><%= button_to 'Sign Up', new_user_registration_path, class: "btn btn-success navbar-btn", style: 'color: white', method: 'get' %></li>
              <% end %>

            </ul>
        </div>
      </div>
      </nav>



      <%= yield %>

      <!-- <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p> -->
      <script>
      $(document).ready(function () {
        $(function(){
          var current_page_URL = location.href;

          $( "a" ).each(function() {

          if ($(this).attr("href") !== "#") {

              var target_URL = $(this).prop("href");

                  if (target_URL == current_page_URL) {
                      $('nav a').parents('li, ul').removeClass('active');
                      $(this).parent('li').addClass('active');

                      return false;
                  }
          }
      }); }); });
    </script>
    <script>
          $(function() {
              $('#edit').froalaEditor()
          });
      </script>
    </body>
</html>

<h1>Please fill the form</h1>

<%= form_for :contact, url: contacts_path do |f| %>
<% if @contact && @contact.errors.any? %>
  <ul>
    <% @contact.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
  <p>
    Title <br>
    <%= f.text_field :email %>
  </p>
  <p>
    Text <br>
    <%= f.text_area :message %>
  </p>
  <%= f.submit %>
<% end %>
